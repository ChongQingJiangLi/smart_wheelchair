<launch>
	<node pkg="wheelchair_base_controller" type="joy2chair.py" name="joy2chair">
        	<param name="port_name" value="/dev/sensors/ftdi_A600aivC" />
	</node>

	<node pkg="sonar_joy" type="sonarReader.py" name="sonarReader" output="screen">
		<param name="port_name" value="/dev/sensors/ftdi_A900ceGt" />
	</node>

	<node pkg="joy" type="joy_node" name="joy_node">
		<param name="autorepeat_rate" value="20.0" />
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.12" />
	</node>

	<node pkg="tf" type="static_transform_publisher" name="frontLeftSonarTF" args="0.508 0.2286 0.4318 0 0 0 base_link frontLeftSonar 100" />

	<node pkg="tf" type="static_transform_publisher" name="diagLeftSonarTF" args="0.4953 0.2286 0.4064 -0.5235983 0 0 base_link diagLeftSonar 100" />

	<node pkg="tf" type="static_transform_publisher" name="sideLeftSonarTF" args="0.4572 0.2286 0.4064 1.57079633 0 0 base_link sideLeftSonar 100" />

	<node pkg="tf" type="static_transform_publisher" name="frontRightSonarTF" args="0.508 -0.2286 0.4318 0 0 0 base_link frontRightSonar 100" />

	<node pkg="tf" type="static_transform_publisher" name="diagRightSonarTF" args="0.4953 -0.2286 0.4064 0.5235983 0 0 base_link diagRightSonar 100" />

	<node pkg="tf" type="static_transform_publisher" name="sideRightSonarTF" args="0.4572 -0.2286 0.4064 -1.57079633 0 0 base_link sideRightSonar 100" />

	<node pkg="wheelchair_base_controller" type="imu_quatcaster.py" name="imu_broadcaster" >
		<param name="port_name" value="/dev/sensors/ftdi_A700eHSG" />
	</node>

</launch>
