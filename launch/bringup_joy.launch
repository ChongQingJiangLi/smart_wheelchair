<launch>

	<node pkg="wheelchair_base_controller" type="joy2chair.py" name="joy2chair">
        	<param name="port_name" value="/dev/ttyUSB0" />
		<remap from="joy" to="sonar_Joy" />
	</node>

	<node pkg="sonar_joy" type="joySonar.py" name="joypublish" output="screen">
	</node>

	<node pkg="sonar_joy" type="arduinoReader.py" name="ardRead" output="screen">
		<param name="port_name" value="/dev/ttyUSB1" />
	</node>

	<node pkg="joy" type="joy_node" name="joy_node">
		<param name="autorepeat_rate" value="20.0" />
	</node>

</launch>
